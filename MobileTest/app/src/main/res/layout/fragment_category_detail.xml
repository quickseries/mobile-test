<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin"
    tools:context=".fragments.categoryDetail.CategoryDetailFragment">


    <TextView
        android:id="@+id/titleTextView"
        style="@style/AppTheme.Detail.TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title Here" />

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_v_spacing_large"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme.Detail.Group.TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_v_spacing"
            android:text="@string/description" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_v_spacing"
            android:background="@drawable/bg_group"
            android:padding="5dp" />
    </LinearLayout>

    <TextView
        style="@style/AppTheme.Detail.Group.TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_v_spacing"
        android:text="@string/created_at" />

    <TextView
        android:id="@+id/creationDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_v_spacing"
        android:background="@drawable/bg_group"
        android:padding="5dp" />

</LinearLayout>