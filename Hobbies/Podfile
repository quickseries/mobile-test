# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def sharedPods
  use_frameworks!

  pod 'ObjectMapper'
  pod 'Alamofire'
  pod 'PKHUD', '~> 5.0'
  pod 'IQKeyboardManagerSwift'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'SwiftRichString'
  pod 'Kingfisher'
end


target 'Hobbies' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  sharedPods
  # Pods for Hobbies


end

target 'HobbiesTests' do
  inherit! :search_paths
  sharedPods
  # Pods for testing
end

target 'HobbiesUITests' do
  inherit! :search_paths
  sharedPods
  # Pods for testing
end
