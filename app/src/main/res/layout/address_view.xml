<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/md_keylines"
    android:paddingBottom="@dimen/md_keylines">

    <TextView
        android:id="@+id/address_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/address_view_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_view_label"/>

    <TextView
        android:id="@+id/address_view_city_state_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_view_address1"/>

    <TextView
        android:id="@+id/address_view_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_view_city_state_zipcode"/>

    <ImageView
        android:id="@+id/address_view_icon"
        android:layout_width="@dimen/list_icon_height_width"
        android:layout_height="@dimen/list_icon_height_width"
        android:contentDescription="@string/address_icon"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_place_black_24dp"/>
</RelativeLayout>