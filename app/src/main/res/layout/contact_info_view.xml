<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:paddingTop="@dimen/md_keylines"
    android:paddingBottom="@dimen/md_keylines">

    <TextView
        android:id="@+id/contact_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contact_info_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_info_label"/>

    <ImageView
        android:id="@+id/contact_info_icon"
        android:layout_width="@dimen/list_icon_height_width"
        android:layout_height="@dimen/list_icon_height_width"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>