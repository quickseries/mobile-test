<?xml version="1.0" encoding="utf-8"?>
<com.mohamadk.quickseries.pages.detail.items.contact.ItemContactView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ib_sms"
                app:layout_constraintEnd_toStartOf="@+id/ib_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textColor="@color/itemContactTitleColor"
                tools:text="@tools:sample/lorem"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                />

        <TextView
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_number"
                tools:text="+98 652 3654"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/ib_call"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_call_24dp"
                />

        <androidx.appcompat.widget.AppCompatImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/ib_sms"
                app:layout_constraintRight_toLeftOf="@+id/ib_call"
                app:layout_constraintTop_toTopOf="@+id/ib_call"
                app:layout_constraintBottom_toBottomOf="@+id/ib_call"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_sms_24dp"
                />

        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/ib_email"
                app:layout_constraintRight_toLeftOf="@+id/ib_sms"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_email_24dp"
                />

        <androidx.appcompat.widget.AppCompatImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/ib_website"
                app:layout_constraintRight_toLeftOf="@+id/ib_email"
                app:layout_constraintTop_toTopOf="@+id/ib_call"
                app:layout_constraintBottom_toBottomOf="@+id/ib_call"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_web_24dp"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mohamadk.quickseries.pages.detail.items.contact.ItemContactView>